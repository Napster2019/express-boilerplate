<div class="dt-content">

  <!-- Page Header -->
  <!-- <div class="dt-page__header">
      <h1 class="dt-page__title">Basic Form</h1>
    </div> -->
  <!-- /page header -->



  <!-- Grid -->
  <div class="row">
    <!-- Grid Item -->
    <div class="col-12">

      <!-- Card -->
      <div class="dt-card">

        <!-- Card Header -->
        <div class="dt-card__header">

          <!-- Card Heading -->
          <div class="dt-card__heading">
            <h3 class="dt-card__title">New Issue's</h3>
          </div>
          <a type="button" href="/add/issue/type" role="button" class="btn btn-dark mr-2 mb-2">Add Issue Type</a>
          <a type="button" href="/add/issue/sources" role="button" class="btn btn-dark mr-2 mb-2">Add Issue Source</a>
          <a type="button" href="/add/issue/titles" role="button" class="btn btn-dark mr-2 mb-2">Add Issue Titles</a>
          <!-- <button type="button" href="javascript:void(0)" role="button" class="btn btn-dark mr-2 mb-2">Add ISO Standards</button> -->
          <a type="button" href="/add/issue/suppliers" role="button" class="btn btn-dark mr-2 mb-2">Add Suppliers</a>
          <a type="button" href="/add/issue/tags" role="button" class="btn btn-dark mr-2 mb-2">Add Issue Tags</a>
          <!-- /card heading -->

        </div>
        <!-- /card header -->

        <!-- Card Body -->
        <div class="dt-card__body">

          <!-- Form -->
          <form>


            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="simple-select">Issue Type</label>
              <div class="col-md-10 col-sm-9">
                <select class="custom-select" id="inputGroupSelect04">
                  <option selected>Choose Issue Type</option>
                  <option value="1">Supplier Issue</option>
                  <option value="2">Non Conformity</option>
                  <option value="3">Customer Compaint</option>
                </select>
              </div>
            </div>

            <!-- /form row -->
            <br />
            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="simple-select">Issue Source</label>
              <div class="col-md-10 col-sm-9">
                <select class="custom-select" id="inputGroupSelect04">
                  <option selected>Choose Source</option>
                  <option value="1">Internal Audit</option>
                  <option value="2">External Audit</option>
                  <option value="3">Observation</option>
                </select>
              </div>
            </div>
            <!-- /form row -->
            <br />

            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="normal-input-1">Project Number</label>

              <div class="col-md-10 col-sm-9">
                <input type="number" class="form-control" name="project_number" id="normal-input-1"
                  placeholder="Enter project number">
              </div>
            </div>
            <!-- /form row -->
            <br />
            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="simple-select">Issue Title</label>
              <div class="col-md-10 col-sm-9">
                <select class="custom-select" id="inputGroupSelect04">
                  <option selected>Choose Issue Title</option>
                  <option value="1">Issues</option>
                  <option value="2">Observations</option>
                  <option value="3">Deviations</option>
                </select>
              </div>
            </div>
            <!-- /form row -->
            <br />
            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="simple-select">Issue Suupliers</label>
              <div class="col-md-10 col-sm-9">
                <select class="custom-select" id="inputGroupSelect04">
                  <option selected>Choose Issue Suupliers</option>
                  <option value="1">ABC LTD</option>
                  <option value="2">DEF LTD</option>
                  <option value="3">GHI LTD</option>
                </select>
              </div>
            </div>
            <!-- /form row -->

            <!-- Form Row -->

            <!-- /form row -->

            <!-- Form Row -->

            <!-- /form row -->
            <br />
            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="simple-select">Risk</label>
              <div class="col-md-10 col-sm-9">
                <select class="custom-select" id="inputGroupSelect04">
                  <option selected>Choose Risk</option>
                  <option value="1">Risk for Buisness</option>
                  <option value="2">Risk for Health</option>
                  <option value="3">Risk for Enviorment</option>
                </select>
              </div>
            </div>
            <!-- /form row -->
            <br />
            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="normal-input-1">Financial
                Impact</label>

              <div class="col-md-10 col-sm-9">
                <input type="text" class="form-control" name="financial_impact" id="normal-input-1"
                  placeholder="Financial Impact">
              </div>
            </div>
            <hr class="border-dashed my-8">
            <div class="form-row mb-4 input-group">
              <label class="col-md-2 col-sm-3 text-sm-right mb-4 mb-sm-0">ISO Standards</label>
              <div class="col-md-10 col-sm-9">


                <div class="custom-control custom-checkbox custom-control-inline">
                  <input type="checkbox" id="customcheckboxInline1" name="customcheckboxInline1"
                    class="custom-control-input" checked>
                  <label class="custom-control-label" for="customcheckboxInline1">ISO 9001</label>
                </div>
                <!-- /checkbox -->

                <!-- Checkbox -->
                <div class="custom-control custom-checkbox custom-control-inline">
                  <input type="checkbox" id="customcheckboxInline2" name="customcheckboxInline1"
                    class="custom-control-input">
                  <label class="custom-control-label" for="customcheckboxInline2">ISO 14001</label>
                </div>
                <!-- /checkbox -->

                <!-- Checkbox -->
                <div class="custom-control custom-checkbox custom-control-inline">
                  <input type="checkbox" id="customcheckboxInline3" name="customcheckboxInline1"
                    class="custom-control-input">
                  <label class="custom-control-label" for="customcheckboxInline3">ISO 45001</label>
                </div>
                <!-- /checkbox -->

                <!-- Checkbox -->
                <div class="custom-control custom-checkbox custom-control-inline">
                  <input type="checkbox" id="customcheckboxInline4" name="customcheckboxInline1"
                    class="custom-control-input">
                  <label class="custom-control-label" for="customcheckboxInline4">ISO 17700</label>
                </div>
              </div>
            </div>
            <br />

            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="file-field">Attached Files</label>

              <div class="col-md-10 col-sm-9">
                <div class="custom-file">
                  <input type="file" name="file" class="custom-file-input" id="file-field">
                  <label class="custom-file-label" for="file-field">Choose file...</label>
                </div>
              </div>
            </div>
            <!-- /form row -->
            <br />
            <!-- Form Row -->
            <div class="form-row input-group">
              <label class="col-md-2 col-sm-3 col-form-label text-sm-right" for="text-area-1">Issue Discription</label>

              <div class="col-md-10 col-sm-9">
                  <div id="summernote">
                      
                    </div>
              </div>
            </div>
            <!-- /form row -->
            <br />
            <div class="form-row input-group">

              <div class="col-md-12 offset-md-2 offset-sm-3">
                <button class="btn btn-primary" style='float:left;' type="submit">Submit this Issue</button>
              </div>
            </div>

          </form>
          <!-- /form -->

        </div>
        <!-- /card body -->

      </div>
      <!-- /card -->

    </div>
    <!-- /grid item -->

  </div>
  <!-- /grid -->

</div>
<!-- /site content -->


